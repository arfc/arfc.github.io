@article{turkmen_neutronics_2019,
	title = {Neutronics modeling of bubbles in bubbly flow regime in boiling water reactors},
	volume = {51},
	issn = {1738-5733},
	url = {https://www.sciencedirect.com/science/article/pii/S1738573318302365},
