	abstract = {This study mainly focused on the neutronics modeling of bubbles in bubbly flow in boiling water reactors. The bubble, ring and homogenous models were used for radial void fraction distribution. Effect of the bubble and ring models on the infinite multiplication factor and two-group flux distribution was investigated by comparing with the homogenous model. Square pitch unit cell geometry was used in the calculations. In the bubble model, spherical and non-spherical bubbles at random positions, sizes and shapes were produced by Monte Carlo method. The results show that there are significant differences among the proposed models from the viewpoint of physical interaction mechanism. For the fully-developed bubbly flow, kinf is overestimated in the ring model by about 720 ± 6 pcm with respect to homogeneous model whereas underestimated in the bubble model by about −65 ± 9 pcm with a standard deviation of 15 pcm. In addition, the ring model shows that the coolant must be separated into regions to properly represent the radial void distribution. Deviations in flux distributions principally occur in certain regions, such as corners. As a result, the bubble model in modeling the void fraction can be used in nuclear engineering calculations.},
	pages = {1241--1250},
	number = {5},
	journaltitle = {Nuclear Engineering and Technology},
	author = {Türkmen, Mehmet and Tiftikci, Ali},
	urldate = {2024-06-05},
	date = {2019-08-01},
	keywords = {{MCNP}, Bubble model, Bubbly flow, Homogenous model, Ring model, Void fraction},
}

@inproceedings{le_guennic_study_2019,
	location = {Clarion Congress Hotel, Prague, Czech Republic},
	title = {{STUDY} {OF} A {THIN} {METALLIC} {LAYER}: {COMPARISON} {OF} {CFD} {AND} {INTEGRAL} {CODES}},
	shorttitle = {{STUDY} {OF} A {THIN} {METALLIC} {LAYER}},
	abstract = {Under in-vessel retention ({IVR}), one of the main threats to vessel integrity is the focusing effect that may be caused by a thin metallic layer. However, the assessment of the ensuing heat loads on the vessel wall remains fraught with uncertainties, thus making a deterministic demonstration of {IVR}'s success very challenging for high power reactors (over 1000 {MWe}). The current analysis methodology yields heat flux values that are well above the cooling limit, but is based on correlations and strong hypotheses whose validity is subject to questions. This study investigates the potential of {CFD} codes to study the metallic layer as a complement to integral codes and experimental studies. A limited code assessment was performed on the water-based {BALI}-Métal experiments as well as low-Prandtl natural convection cases. A benchmark between two {CFD} codes was then carried out on prototypical computations; finally, a benchmark between {CFD} and integral codes was performed to assess the differences. The results of the code assessments are presented; they are in good agreement with the reference data on both the water-based and the low-Prandtl cases. The {CFD} benchmark on prototypical computations shows good convergence between the two codes, and a behavior that is markedly different from water experiments. The first results of the {CFD}/integral code benchmark are also presented. Finally, perspectives for future investigations are exposed.},
	eventtitle = {The 9TH European Review Meeting on Severe Accident Research ({ERMSAR}2019)},
	booktitle = {The 9TH European Review Meeting on Severe Accident Research ({ERMSAR}2019)},
	author = {Le Guennic, Clémentine and Skrzypek, Eleonora and Skrzypek, M and Bakouta, Nikolai},
	date = {2019-03-18},
}

@inproceedings{darnowski_melcor_2019,
	location = {Portoroz, Slovenia},
	title = {{MELCOR} Simulations of the {SBO} in Gen {III} {PWR} with {EVMR}},
	abstract = {The paper presents simulations of a Station Blackout accident in a large generic {PWR} reactor with Ex-Vessel Melt Retention ({EVMR}) strategy. The nuclear power plant is equipped with core melt stabilisation device (core-catcher), which plays an essential role in its severe accident mitigation strategy. The plant model and simulations were prepared with the {MELCOR} 2.2.9541 computer code for in-vessel and ex-vessel phases. The analysis covered thermal-hydraulics, core degradation, {MCCI} and containment response. Conclusions were found about the core catcher modelling with {MELCOR}. It was found that the current {LHC} model cannot be directly used to assess the core catcher performance for the studied design. The mixed corium was studied for old and new ({SOARCA} based) {MELCOR} default setup and four parametric cases. It was observed that the corium conductivity multipliers have an impact on the assessment of the core catcher and containment response.},
	booktitle = {Proceedings of the 28th International Conference Nuclear Energy for New Europe},
	author = {Darnowski, Piotr and Mazgaj, Piotr and Skrzypek, Eleonora},
	date = {2019},
	langid = {english},
}

